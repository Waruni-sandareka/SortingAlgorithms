<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.uoc.group.groupassignment.HelloController"
            style="-fx-background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS2qeXfizbwVcRny94y5uNBV8jrVAgVFqgB0g&amp;s'); -fx-background-size: cover; -fx-background-position: center; -fx-background-repeat: no-repeat;">
    <children>
        <!-- Pre Condition Label -->
        <Label fx:id="preConditionLabel" text="Please Select .CSV files only"
               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-text-alignment: center;"
               AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="50.0"
               AnchorPane.topAnchor="80.0"/>

        <!-- Upload Button -->
        <Button fx:id="uploadButton" text="Upload CSV" onAction="#onUploadButtonClick"
                prefWidth="300" prefHeight="50"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10px; -fx-text-alignment: center;"
                AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                AnchorPane.topAnchor="150.0"/>

        <!-- Column Selection ComboBox -->
        <ComboBox fx:id="columnComboBox"
                  prefWidth="300" prefHeight="50"
                  style="-fx-background-color: #ffffff; -fx-font-size: 18px; -fx-text-fill: black;"
                  AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                  AnchorPane.topAnchor="220.0"/>

        <!-- Sorting Algorithm ComboBox -->
        <ComboBox fx:id="algorithmComboBox"
                  prefWidth="300" prefHeight="50"
                  style="-fx-background-color: #ffffff; -fx-font-size: 18px; -fx-text-fill: black;"
                  AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                  AnchorPane.topAnchor="290.0"/>

        <!-- Sort Button -->
        <Button fx:id="sortButton" text="Sort" onAction="#onSortButtonClick"
                prefWidth="300" prefHeight="50"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10px; -fx-text-alignment: center;"
                AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                AnchorPane.topAnchor="360.0"/>

        <!-- Result Label -->
        <Label fx:id="resultLabel" text="Result will appear here"
               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-text-alignment: center;"
               AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="50.0"
               AnchorPane.topAnchor="630.0"/>

        <Button fx:id="findBestButton" text="Find Best Sort Method" onAction="#onFindBestMethodButtonClick"
                AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="500.0"
                prefWidth="300"
                style="-fx-background-color: #F57C00; -fx-text-fill: white; -fx-font-size: 24px;"/>

    </children>

</AnchorPane>
